<view><view class="none"><block wx:if="{{flag}}"><image src="/static/images/kongdaizi.png"></image></block><block wx:if="{{flag}}"><view>暂无购物车商品</view></block></view><block wx:if="{{!flag}}"><view class="shopping-box"><block wx:for="{{shop}}" wx:for-item="item" wx:for-index="unique" wx:key="unique"><view class="shopping-list"><block wx:if="{{!item.select}}"><image class="shopping-select" src="/static/images/kong.png" data-event-opts="{{[['tap',[['selects',['$0'],[[['shop','',unique]]]]]]]}}" bindtap="__e"></image></block><block wx:if="{{item.select}}"><image class="shopping-select" src="/static/images/gou.png" data-event-opts="{{[['tap',[['selects',['$0'],[[['shop','',unique]]]]]]]}}" bindtap="__e"></image></block><image class="shopping-img" src="{{item.mainImg}}"></image><view data-event-opts="{{[['tap',[['commodity_details',['$0'],[[['shop','',unique]]]]]]]}}" class="shopping-content" bindtap="__e"><view>{{item.goodsName}}</view><view>{{item.skuName}}</view><view><view><label class="_span">￥</label>{{item.marketPrice}}</view><view class="buy-num"><view data-event-opts="{{[['tap',[['jianBtnTap',['$0',unique],[[['shop','',unique]]]]]]]}}" class="{{['jian-btn '+(item.skuCount<=1?'disabled':'')]}}" catchtap="__e">－</view><view data-event-opts="{{[['tap',[['kuang',['$event']]]]]}}" class="kuang" catchtap="__e">{{item.skuCount}}</view><view data-event-opts="{{[['tap',[['jiaBtnTap',['$0'],[[['shop','',unique]]]]]]]}}" class="{{['jia-btn '+(item.skuCount>=item.skuStock?'disabled':'')]}}" catchtap="__e">+</view></view></view></view><block wx:if="{{item.skuStock==0}}"><view class="noGoods">无货</view></block><block wx:if="{{item.commodityFrame}}"><view class="noGoods">已下架</view></block></view></block><view hidden="{{!(isloadedend)}}" class="bottomText">已全部加载</view></view></block><block wx:if="{{!flag}}"><view class="shopping-bottom"><view data-event-opts="{{[['tap',[['AllselectsFun',['$event']]]]]}}" bindtap="__e"><block wx:if="{{!Allselects}}"><image src="/static/images/kong.png"></image></block><block wx:if="{{Allselects}}"><image src="/static/images/gou.png"></image></block><view>全选</view></view><view><view>合计：</view><view>{{"￥"+money}}</view><view data-event-opts="{{[['tap',[['orderDetails',['$event']]]]]}}" bindtap="__e">结算</view></view></view></block></view>