page{
  background-color: #fff;
}
.nav-wrap{ 
  position: fixed;
  top: 0;
  height: 80rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background-color: #fff;
  z-index: 100;
  width: 750rpx;
  -webkit-justify-content: space-around;
          justify-content: space-around
}
.nav-wrap view{
  font-size: 30rpx;
  color: #9f9e9e;
  height: 70rpx;
  line-height: 70rpx;
}
.nav-wrap .choose{
  color: #ff4343;
  border-bottom: 5rpx solid #ff4343
}
.jingxuan-main{
  background-color: #f1f1f1;
  width: 710rpx;
  padding: 20rpx 20rpx 20rpx 20rpx;
  margin-top: 60rpx;
}
.jingxuan-main-box{
  width: 710rpx;
  height: 330rpx;
  border-radius: 20rpx;
  margin-top: 35rpx;
  overflow: hidden;
}
.jingxuan-main-box>view:nth-child(1){
  width: 710rpx;
  height: 260rpx;
  position: relative;
}
.jingxuan-main-box>view:nth-child(1) image{
  width: 100%;
  height: 100%;
}
.jingxuan-main-box>view:nth-child(2){
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  height: 70rpx;
  background-color: #fff;
}
.jingxuan-main-box>view:nth-child(2)>text{
  color: #727272;
  font-size: 30rpx;
  margin-left: 15rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  width:450rpx
}
.jingxuan-main-box>view:nth-child(2)>view{
  margin-right: 15rpx
}
.jingxuan-main-box>view:nth-child(2)>view>text:nth-child(1){
  color: #ff4343;
  font-size: 28rpx;
  font-weight: bold;
}
.goodsListMoney1{
  color: #ff4343;
  font-size: 36rpx;
  font-weight: bold;
  margin-left: 3rpx
}
.goodsListMoney2{
  color: #ff4343;
  font-size: 27rpx;
  font-weight: bold;
}
