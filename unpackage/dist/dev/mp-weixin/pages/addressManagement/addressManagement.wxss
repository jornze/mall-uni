page{
  background-color: #eee;
  padding-bottom: 130rpx;
}
.none{
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
}
.none image{
  height: 180rpx;
  width: 250rpx;
  margin-top: 275rpx;
}
.none view{
  font-size: 28rpx;
  color: #ccc;
  margin-top: 20rpx;
}
.addressAll{
  margin-top: 40rpx;
  background-color: #fff
}
.address{
  border-bottom: 1rpx solid #eee;
  width: 750rpx;
  height: 170rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  position: relative
}
.addressImgBox{
  width: 50rpx;
  height: 170rpx;
}
.addressImgBox image{
  width: 39rpx;
  height: 39rpx;
  margin-left: 20rpx; 
  margin-top: 67rpx
}
.addressMain{
  height: 170rpx;
  width: 550rpx;
  position: relative;
  margin-left: 25rpx;
}
.addressMain>view:nth-child(1){
  color: #333;
  font-size: 32rpx;
  margin-top: 35rpx;
}
.addressMain>view:nth-child(1) ._span{
  color: #666;
  font-size: 26rpx;
  margin-left: 20rpx;
}
.addressMain>view:nth-child(2){
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex
}
.addressMainDetails{
  color: #666;
  font-size: 25rpx;
  margin-top: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  width:530rpx;
  margin-right: 25rpx
}
.moren{
  margin-top: 20rpx;
  color: #ff4343;
  font-size: 23rpx;
  border: 2rpx solid #ff4343;
  border-radius: 5rpx;
  width: 60rpx;
  height: 30rpx;
  text-align: center;
  margin-right: 20rpx;
}
.addressEdit{
  height: 70rpx;
  width: 125rpx;
  border-left: 1rpx solid #eee;
  text-align: center;
  line-height: 70rpx;
  color: #676767;
  font-size: 28rpx;
  position: absolute;
  right: 0
}
.bottom{
  background-color: #ff7e7e;
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 110rpx;
  color: #fff;
  line-height: 110rpx;
  text-align: center;
  font-size: 36rpx;
}

