page{
  background-color: #fff;
  width: 750rpx;
}
.jingxuan-swiper{
  width: 750rpx;
  height: 290rpx;
}
.jingxuan-swiper image{
  width: 100%;
  height: 100%
}
.jingxuan-swiper .wx-swiper-dot{
  width:12rpx;
  display: -webkit-inline-box;
  display: -webkit-inline-flex;
  display: inline-flex;
  height: 12rpx;
  margin-left: 5rpx;
  -webkit-box-pack:justify;
  -webkit-justify-content:space-between;
          justify-content:space-between;
}
.nav-wrap{
  height: 80rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 0 70rpx;
}
.nav{
  z-index: 100;
  background-color: #fff;
}
.Top{
  position: fixed;
  top: 0;
  z-index: 999;
  background-color: #fff;
  width: 100%;
}
.nav-wrap view{
  font-size: 30rpx;
  color: #9f9e9e;
  height: 70rpx;
  line-height: 70rpx;
}
.nav-wrap .choose{
  color: #ff4343;
  border-bottom: 5rpx solid #ff4343
}
.jingxuan-main{
  background-color: #f1f1f1;
  width: 710rpx;
  padding: 5rpx 20rpx 20rpx 20rpx;
}
.jingxuan-main-box{
  width: 710rpx;
  height: 330rpx;
  border-radius: 20rpx;
  margin-top: 35rpx;
  overflow: hidden
}
.jingxuan-main-box>view:nth-child(1){
  width: 710rpx;
  height: 260rpx;
  position: relative;
  overflow: hidden
}
.jingxuan-main-box>view:nth-child(1) image{
  width: 100%;
  height: 100%;
}
.jingxuan-main-box>view:nth-child(1) view{
  position: absolute;
  height: 46rpx;
  border-radius: 23rpx;
  background-color: rgba(180, 180, 180, 0.4);
  top: 20rpx;
  right: -20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
  padding-left: 20rpx
}
.jingxuan-main-box>view:nth-child(1) view image{
  height: 35rpx;
  width: 35rpx;
  margin-right: 10rpx
}
.jingxuan-main-box>view:nth-child(1) view text{
  color: #fff;
  font-size: 28rpx;
  margin-right: 35rpx;
}
.jingxuan-main-box>view:nth-child(2){
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  height: 70rpx;
  background-color: #fff;
}
.jingxuan-main-box>view:nth-child(2)>text{
  color: #727272;
  font-size: 30rpx;
  margin-left: 15rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  width:450rpx
}
.jingxuan-main-box>view:nth-child(2)>view{
  margin-right: 15rpx
}
.jingxuan-main-box>view:nth-child(2)>view>text:nth-child(1){
  color: #ff4343;
  font-size: 28rpx;
  font-weight: bold;
}
.jingxuan-main-box>view:nth-child(2)>view>text:nth-child(2){
  color: #ff4343;
  font-size: 36rpx;
  font-weight: bold;
  margin-left: 3rpx
}
.jingxuan-main-box>view:nth-child(2)>view>text:nth-child(3){
  color: #ff4343;
  font-size: 27rpx;
  font-weight: bold;
}
.bottomText{
	text-align: center;
	height: 80rpx;
	line-height: 89rpx;
	font-size: 30rpx;
	color:#D4D4D4;
}

